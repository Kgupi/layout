{
  "name": "@angular-material-extensions/layout-demo",
  "version": "0.0.0",
  "license": "MIT",
  "description": "Demo app for @angular-material-extensions/layout",
  "scripts": {
    "ng": "ng",
    "build": "ng build",
    "build:doc": "cd ../ && gulp build:doc",
    "build:prod": "ng build --prod ",
    "build:client-and-server-bundles": "ng build --prod &&  ng run @angular-material-extensions/layout-demo:server:production",
    "build:prerender": "npm run build:client-and-server-bundles && npm run webpack:server && npm run generate:prerender",
    "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
    "compile:server": "tsc -p server.tsconfig.json",
    "e2e": "ng e2e",
    "generate:prerender": "cd dist && node prerender",
    "lint": "ng lint",
    "test": "ng test",
    "postinstall": "npm link @angular-material-extensions/layout",
    "start": "ng serve",
    "serve:prod": "ng serve --prod",
    "serve:prerender": "cd dist/browser && http-server",
    "serve:ssr": "node dist/server",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.10",
    "@angular/cdk": "^6.4.7",
    "@angular/common": "^6.1.10",
    "@angular/compiler": "^6.1.10",
    "@angular/core": "^6.1.10",
    "@angular/flex-layout": "^6.0.0-beta.18",
    "@angular/forms": "^6.1.10",
    "@angular/http": "^6.1.10",
    "@angular/material": "^6.4.7",
    "@angular/platform-browser": "^6.1.10",
    "@angular/platform-browser-dynamic": "^6.1.10",
    "@angular/platform-server": "^6.1.10",
    "@angular/pwa": "^0.7.5",
    "@angular/router": "^6.1.10",
    "@angular/service-worker": "^6.1.10",
    "@ng-bootstrap/ng-bootstrap": "2.0.0",
    "bootstrap": "4.1.1",
    "core-js": "^2.5.4",
    "font-awesome": "^4.7.0",
    "include-media": "^1.4.9",
    "ngx-markdown": "^6.3.0",
    "rxjs": "^6.3.3",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.6.8",
    "@angular/cli": "~6.1.5",
    "@angular/compiler-cli": "^6.1.10",
    "@angular/language-service": "^6.1.10",
    "@angularclass/hmr": "~2.1.3",
    "@nguniversal/common": "^6.1.0",
    "@nguniversal/express-engine": "^6.1.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.1.0",
    "@types/jest": "23.0.0",
    "@types/node": "~10.3.1",
    "codelyzer": "^4.5.0",
    "express": "^4.16.4",
    "http-server": "^0.11.1",
    "jest": "23.1.0",
    "jest-preset-angular": "5.2.2",
    "protractor": "~5.3.0",
    "reflect-metadata": "~0.1.10",
    "ts-loader": "~4.2.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.9.2",
    "webpack-cli": "^2.0.14"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupJest.ts"
  }
}
